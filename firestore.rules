rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // Helper function to check if user is admin
    function isAdmin() {
      return request.auth != null && get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == "admin";
    }

    // Golf Courses: Public read, Admin write
    match /golf-courses/{courseId} {
      allow read: if true;
      allow write: if isAdmin();
    }

    // Joins: Public read, Admin write, Authenticated users can update currentMembers
    match /joins/{joinId} {
      allow read: if true;
      allow create, delete: if isAdmin();
      allow update: if isAdmin() || (request.auth != null && request.resource.data.diff(resource.data).affectedKeys().hasOnly(['currentMembers']));
    }

    // Join Participants: Authenticated users can manage their own participation
    match /joinParticipants/{participantId} {
      allow read: if true;
      allow create: if request.auth != null && request.resource.data.userId == request.auth.uid;
      allow update: if isAdmin();
      allow delete: if request.auth != null && (resource.data.userId == request.auth.uid || isAdmin());
    }

    // Users: Read/Write own profile, Admin can read/write all
    match /users/{userId} {
      allow read, write: if request.auth != null && (request.auth.uid == userId || isAdmin());
    }

    // Reviews: Public read, Authenticated users can write (own reviews)
    match /reviews/{reviewId} {
      allow read: if true;
      allow create: if request.auth != null && request.resource.data.userId == request.auth.uid;
      allow update, delete: if request.auth != null && (resource.data.userId == request.auth.uid || isAdmin());
    }

    // Notifications: Users can read/update their own, Admin can create
    match /notifications/{notificationId} {
      allow read, update: if request.auth != null && resource.data.userId == request.auth.uid;
      allow create: if isAdmin();
    }

    // Custom Requests: Users can create, Admin can read/update
    match /custom_requests/{requestId} {
      allow create: if request.auth != null && request.resource.data.userId == request.auth.uid;
      allow read: if isAdmin() || (request.auth != null && resource.data.userId == request.auth.uid);
      allow update: if isAdmin();
    }

    // Default: Deny all
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
